@model List<Movie>
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2>MOVIES</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Movie
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Release Date
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.OrderBy(o => o.Id))
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.ReleaseDate</td>
                    <td>@obj.Price</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Movie" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="bi bi-pen-fill"></i> Edit
                            </a>
                            <a asp-controller="Movie" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                            <a asp-controller="Movie" asp-action="Get" asp-route-id="@obj.Id" class="btn btn-info">
                                <i class="bi bg-info-subtle"></i> Details
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>    
    </table>
</div>